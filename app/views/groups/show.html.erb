<div class="container pt-3">
  <div class="row">
    <div class="col-3">
      <%= render "users/info", user: current_user %>
      <%= render "books/form", book: @book %>
    </div>
    <div class="col-9">
      <h2>グループ詳細</h2>
      <div>
        <div class="row">
          <div class="col-3"><%= image_tag @group.get_group_image, size: "50x050" %></div>
          <div class="col-3"><%= @group.name %></div>
          <div class="col-3"><%= @group.introduction %></div>
          <% if @group.owner_id == current_user.id %>
            <div class="col-3"><%= link_to "Edit", edit_group_path(@group) %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>